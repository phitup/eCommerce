<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ShopFragment">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <ss.com.bannerslider.Slider
            android:id="@+id/bannerSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:slider_interval="8000"
            app:slider_loopSlides="true"
            app:slider_indicatorSize="8dp"
            app:slider_animateIndicators="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />
            <org.lucasr.twowayview.TwoWayView
                android:id="@+id/twoWayViewCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:horizontalSpacing="15dp"
                android:verticalSpacing="15dp"
                android:padding="8dp"
                android:clipToPadding="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goi_y_hom_nay"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />
            <com.example.ecommerceapp.ExpandableHeightGridView
                android:id="@+id/gridProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:padding="8dp"
                android:clipToPadding="false"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
